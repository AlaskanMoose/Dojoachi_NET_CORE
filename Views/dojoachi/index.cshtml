<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Random Passcode</title>
    <link rel="stylesheet" href="~/css/style.css"/>
    <link href="https://maxcdn.bootstrapcdn.com/bootswatch/3.3.7/slate/bootstrap.min.css" rel="stylesheet" integrity="sha384-RpX8okQqCyUNG7PlOYNybyJXYTtGQH+7rIKiVvg1DLg6jahLEk47VvpUyS+E2/uJ" crossorigin="anonymous"></head>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.0/jquery.min.js"></script>
    <script>
        $(document).ready(function(){
            $("#button_1").click(function(){
                $.get("feed", function(response){
                     $("#Fullness").html("Fullness: " + response.fullness + "&nbsp;&nbsp;");
                     $("#Meals").html("Meals: " + response.meals + "&nbsp;&nbsp;");
                     $("#Happiness").html("Happiness: " + response.happiness + "&nbsp;&nbsp;");
                     $("#Energy").html("Energy: " + response.energy + "&nbsp;&nbsp;");
                     $("#Message").html(response.message);
                     if(response.gameStatus == 2 || response.gameStatus == 3){
                         $("#button_action").html("<form action='/restart' method='post'><button class='btn btn-primary'' id='button_5'>Restart</button></form>");
                     }
                })
            })
            $("#button_2").click(function(){
                $.get("play", function(response){
                    $("#Fullness").html("Fullness: " + response.fullness + "&nbsp;&nbsp;");
                    $("#Meals").html("Meals: " + response.meals + "&nbsp;&nbsp;");
                    $("#Happiness").html("Happiness: " + response.happiness + "&nbsp;&nbsp;");
                    $("#Energy").html("Energy: " + response.energy + "&nbsp;&nbsp;");
                    $("#Message").html(response.message);
                    if(response.gameStatus == 2 || response.gameStatus == 3){
                        $("#button_action").html("<form action='/restart' method='post'><button class='btn btn-primary'' id='button_5'>Restart</button></form>");
                    }
                })
            })
            $("#button_3").click(function(){
                $.get("work", function(response){
                    $("#Fullness").html("Fullness: " + response.fullness + "&nbsp;&nbsp;");
                    $("#Meals").html("Meals: " + response.meals + "&nbsp;&nbsp;");
                    $("#Happiness").html("Happiness: " + response.happiness + "&nbsp;&nbsp;");
                    $("#Energy").html("Energy: " + response.energy + "&nbsp;&nbsp;");
                    $("#Message").html(response.message);
                    if(response.gameStatus == 2 || response.gameStatus == 3){
                         $("#button_action").html("<form action='/restart' method='post'><button class='btn btn-primary'' id='button_5'>Restart</button></form>");
                     }
                })
            })
            $("#button_4").click(function(){
                $.get("sleep", function(response){
                    $("#Fullness").html("Fullness: " + response.fullness + "&nbsp;&nbsp;");
                    $("#Meals").html("Meals: " + response.meals + "&nbsp;&nbsp;");
                    $("#Happiness").html("Happiness: " + response.happiness + "&nbsp;&nbsp;");
                    $("#Energy").html("Energy: " + response.energy + "&nbsp;&nbsp;");
                    $("#Message").html(response.message);
                    if(response.gameStatus == 2 || response.gameStatus == 3){
                         $("#button_action").html("<form action='/restart' method='post'><button class='btn btn-primary'' id='button_5'>Restart</button></form>");
                     }
                })
            })
            $("#button_5").click(function(){
                $.get("restart", function(response){

                })
            })
        })
    </script>
<body>
    <div class="container">
        <div class="row">
            <div class="col-sm-2"></div>
            <div class="col-sm-10">
                <h2>Dojoachi</h2>
                <div class="top-bar">
                    <h4><span id="Fullness">Fullness:@ViewBag.Lebron.Fullness</span> <span id="Happiness">Happiness:@ViewBag.Lebron.Happiness</span> <span id="Meals">Meals:@ViewBag.Lebron.Meals</span> <span id="Energy">Energy:@ViewBag.Lebron.Energy</span> <span id="gameStatus">Game Status:@ViewBag.Lebron.gameStatus</span> </h4>
                </div>
                <div class="main">
                    <img src="~/img/Lebron_head.jpg" alt="Dojoachi Lebron"  class="img-circle" style="width:200px; height200px;">
                    <p id="Message">@ViewBag.Lebron.Message</p>
                </div>
                <div class="container">
                    <div class="btn-group" id="button_action">
                        <button class="btn btn-primary" id="button_1">Feed</button>
                        <button class="btn btn-primary" id="button_2">Play</button>
                        <button class="btn btn-primary" id="button_3">Work</button>
                        <button class="btn btn-primary" id="button_4">Sleep</button>
                    </div>
                </div>
            </div>
            <div class="col-sm-2"></div>
        </div>

    </div>
</body>
</html>